@model Model.ViewModel.SalarySettingsViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Post", "SalarySettings", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SalarySettingsId)
    @Html.HiddenFor(m => m.SiteId)
    @Html.HiddenFor(m => m.DivisionId)
    @Html.HiddenFor(m => m.DocTypeId)

    <div class="panel panel-default">

        <div class="panel-heading">

            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> @Model.DocTypeName Settings</span>
                <input type="submit" value="Save" class="btn btn-primary right" id="submit" style="width: 90px; background-color: #2980b9" />
            </h3>
            <hr style="margin-top:0px;margin-bottom:0px" />

            <div class="panel-info">
                <h4 style="padding:5px 0 0 0;margin:0px">
                    @Html.ActionLink(" ", " ", " ", null, new { @class = "glyphicon glyphicon-refresh toolbar", @title = "Refresh Page", @data_toggle = "tooltip", @id = "RefreshPage" })
                    @Html.ActionLink(" ", "GetHistory", "LogHistory", new { Ids = Model.SalarySettingsId, DocTypeId = Model.DocTypeId }, new { @class = "glyphicon glyphicon-user toolbar", @title = "History", @data_toggle = "tooltip", @id = "DocHistory", @data_modal = "" })
                    @Html.ActionLink(" ", "Index", "SalaryHeader", new { @id = @Model.DocTypeId }, new { @class = "glyphicon glyphicon-list toolbar right", @title = "List", @data_toggle = "tooltip" })
                </h4>
            </div>
        </div>
        <div class="panel-info" style="padding-left:15px">

            <div class="form-horizontal">

                @Html.ValidationSummary(true)

                

                
                <hr style="margin-bottom:0px" />
                <div class="row">
                    <h3 class="col-md-12 black">
                        <span class="glyphicon glyphicon-align-justify"></span>
                        1.Filters
                    </h3>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.filterContraDivisions, "Contra Divisions", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.filterContraDivisions, new { @class = "form-control col-xs-6" })
                                        @Html.ValidationMessageFor(m => m.filterContraDivisions, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.filterContraSites, "Contra Sites", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.filterContraSites, new { @class = "form-control col-xs-6" })
                                        @Html.ValidationMessageFor(m => m.filterContraSites, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <hr style="margin-bottom:0px" />
                <div class="row">
                    <h3 class="col-md-12 black">
                        <span class="glyphicon glyphicon-align-justify"></span>
                        2.Other Settings
                    </h3>
                    <div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SqlProcDocumentPrint, "SQL Proc DocumentPrint", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.SqlProcDocumentPrint, new { @class = "form-control col-xs-6" })
                                        @Html.ValidationMessageFor(m => m.SqlProcDocumentPrint, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.WizardMenuId, "Wizard Menu", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.WizardMenuId, new { @class = "form-control col-xs-6" })
                                        @Html.ValidationMessageFor(m => m.WizardMenuId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DocumentPrint, "RS DocumentPrint", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.DocumentPrint, new { @class = "form-control col-xs-6" })
                                        @Html.ValidationMessageFor(m => m.DocumentPrint, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NoOfPrintCopies, "Print Copies", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.NoOfPrintCopies, new { @class = "form-control col-xs-6" })
                                        @Html.ValidationMessageFor(m => m.NoOfPrintCopies, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ImportMenuId, "Import Menu", new { @class = "control-label col-xs-4" })
                                    <div class="col-xs-6">
                                        @Html.TextBoxFor(m => m.ImportMenuId, new { @class = "form-control col-xs-6" })
                                        @Html.ValidationMessageFor(m => m.ImportMenuId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">

    $(function () {
        CustomSelectFunction($("#CalculationId"), '/ComboHelpList/GetCalculation', '/ComboHelpList/SetSingleCalculation', ' ', false, 1);
        CustomSelectFunction($("#WizardMenuId"), '/ComboHelpList/GetMenu', '/ComboHelpList/SetSingleMenu', ' ', false, 1);
        CustomSelectFunction($("#ImportMenuId"), '/ComboHelpList/GetMenu', '/ComboHelpList/SetSingleMenu', ' ', false, 1);
        CustomSelectFunction($("#filterContraDivisions"), '/ComboHelpList/GetDivision', '/ComboHelpList/SetDivision', ' ', true, 1);
        CustomSelectFunction($("#filterContraSites"), '/ComboHelpList/GetSite', '/ComboHelpList/SetSite', ' ', true, 1);
    });


    var IsSaved = false;
    var ValidationCount = 0;

    $('form').submit(function (event) {

        if (!IsSaved) {
            IsSaved = true;
            return IsSaved;
        }
        else {
            return false;
        }
    });

</script>